generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

//need an img column 
model Report {
  id          Int      @id @default(autoincrement())
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String
  latitude    Float
  longitude   Float
  category    String
  subCategory String
  description String?

  @@index(authorId)
}
